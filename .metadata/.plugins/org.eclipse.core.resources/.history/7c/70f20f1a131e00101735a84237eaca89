package com.fjpp.expos.screens;

import javax.swing.*;


public class InitialScreen {
	
	JFrame frame;
	JLabel lblIcon;
	JButton btnLogin;
	JButton btnSignup;
	
	public InitialScreen() {
		
		// background
		frame = new JFrame();
		
		frame.setTitle("Fjpp Expos");
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setSize(500,500);
		frame.setLayout(null);
		frame.setVisible(true);
		
		// dog icon
		lblIcon = new JLabel();
		lblIcon.setIcon(new javax.swing.ImageIcon(getClass().getResource("/com/fjpp/expos/icons/dog.png")));
		lblIcon.setBounds(100, 200, 300, 100);
		frame.add(lblIcon);
		
		// login button
		btnLogin = new JButton("Login");
		btnLogin.setBounds(85, 250, 150, 50);
		frame.add(btnLogin);
		
		// signup button
		btnSignup = new JButton("Sign up");
		btnSignup.setBounds(265, 250, 150, 50);
		frame.add(btnSignup);
	}
}
